<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <!-- ImageView cho hình ảnh đơn hàng -->
    <ImageView
        android:id="@+id/imgOrder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- TextView cho tên đơn hàng -->
    <TextView
        android:id="@+id/txtOrderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên đơn hàng"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgOrder"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TextView cho trạng thái đơn hàng -->
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trạng thái"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtOrderName"
        app:layout_constraintStart_toEndOf="@id/imgOrder"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
