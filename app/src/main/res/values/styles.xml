<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme chính sử dụng Material Components -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Tắt ActionBar mặc định -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- BottomSheetDialogTheme: bo góc, nền trong suốt -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Style cho các button trong bộ lọc -->
    <style name="FilterButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_button_unselected</item>
        <item name="android:textColor">#000000</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="FilterButton.Selected">
        <item name="android:background">@drawable/bg_button_selected</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Style cho item tài khoản (ví dụ trong Drawer hoặc profile list) -->
    <style name="AccountItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
